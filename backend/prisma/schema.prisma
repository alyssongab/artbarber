generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  // url      = env("DATABASE_URL")
}

enum Role {
  CLIENT
  ADMIN
  BARBER
}

enum AppointmentStatus {
  PENDENTE
  CONCLUIDO
  CANCELADO
}

enum ServiceStatus {
  ACTIVE
  INACTIVE
}

model User {
  user_id                   Int               @id @default(autoincrement())
  full_name                 String
  email                     String            @unique
  password                  String
  phone_number              String
  birthday                  DateTime?         @db.Date
  cpf                       String?           @unique
  role                      Role              @default(CLIENT)
  photo_url                 String?
  thumbnail_url             String?                   
  appointmentsAsBarber      Appointment[]     @relation("BarberAppointments")
  appointmentsAsClient      Appointment[]     @relation("ClientAppointments")

  @@map("usuarios")
}
model Service {
  service_id          Int             @id @default(autoincrement())
  name                String    
  price               Decimal         @db.Decimal(10,2)
  duration            Int
  service_status      ServiceStatus   @default(ACTIVE)
  appointments        Appointment[]

  @@map("servicos")
}

model Appointment {
  appointment_id        Int                @id @default(autoincrement())
  appointment_datetime  DateTime
  appointment_status    AppointmentStatus  @default(PENDENTE)

  id_barber             Int
  barber                User               @relation("BarberAppointments", fields: [id_barber], references: [user_id])
  
  // client id may be null because they might make an appointment in person
  id_client             Int?
  client                User?              @relation("ClientAppointments", fields: [id_client], references: [user_id])

  id_service            Int
  service               Service            @relation(fields: [id_service], references: [service_id])
  
  notification_sent      Boolean           @default(false)

  @@map("agendamentos")
}
